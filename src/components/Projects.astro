---
import Slider from '@components/Slider'
import { getCollection } from "astro:content";
import langColors from '@services/getLangColor';

const posts = (await getCollection('projects')).sort(
	(a, b) => b.data.created.valueOf() - a.data.created.valueOf()
)
---

<section class='w-full h-full flex flex-col items-center justify-center my-8 px-6 max-w-xs xl:px-48 mx-auto sm:max-w-2xl md:max-w-7xl'>
	<h2 class='text-4xl md:text-6xl lg:text-8xl xl:text-9xl font-mona-sans [font-stretch:ultra-expanded] font-bold w-full'>Trabajos Seleccionados</h2>
    <div class="divider"></div>
</section>
<main class='w-full mb-20 flex flex-col items-center justify-center max-w-xs md:px-6 transition-all duration-300 ease-in-out hover:text-info mx-auto sm:max-w-2xl md:max-w-7xl'>
  <div class='w-full [height:100dvh]'>
    <Slider client:load />
  </div>
	<div class='flex w-full items-center justify-end px-6'>
		<a href='/projects' class='btn btn-outline btn-primary'>Todos los Proyectos</a>
	</div>
</main>

---
import BlogCardIndex from '@components/blog/BlogCardIndex.astro'

import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
)
---

<section class='w-full h-full flex flex-col items-center justify-center my-8 pr-16 mb-28'>
  <h2 class='text-6xl font-mona-sans [font-stretch:ultra-expanded] font-bold w-full'>Ãšltimas Publicaciones</h2>
  <div class='divider'></div>
  {
  posts.slice(0, 3).map(post => (
		<BlogCardIndex
		  title={post.data.title}
			publishDate={post.data.publishDate}
			description={post.data.description}
			url={`/blog/${post.slug}`}
			tags={post.data.tags}
		/>
  ))
  }
  <div class='w-full flex items-end justify-end mt-8'>
    <a href='/blog/' class='btn btn-md btn-neutral duration-700'>todas las publicaciones</a>
  </div>
</section>

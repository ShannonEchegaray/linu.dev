---
import Noise from '@components/Noise.astro'
import Head from '@components/Head.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

interface Props {
	title: string;
	description: string;
	ogImage?: {
		src: string;
		alt: string;
	};
	publishDate?: Date;
}

const {
	title,
	description,
	ogImage = {
		src: '/assets/og-image.png',
		alt: 'Astro',
	},
	publishDate = new Date(),
} = Astro.props

---

<!DOCTYPE html>
<html
	lang='en'
	class='scrollbar-thin scrollbar-thumb-overlay scrollbar-track-base-100 scrollbar-thumb-rounded-md scroll-smooth overflow-x-hidden'>
	<Head 
		title={title}
		description={description}
		ogImage={ogImage}
		publishDate={publishDate}
	/>
	<body class='bg-base text-text'>
    <Noise />
    <div class='relative z-20 mx-auto md:max-w-5xl'>
		  <Header />
		  <slot />
      <Footer />
    </div>
	</body>
</html>
